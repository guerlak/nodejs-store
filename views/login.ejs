<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
        <%- include('./includes/navigation.ejs') %>

        <% if(errorMsg) {%>
            <div class="user-msg-error"><%= errorMsg %></div>
        <% } %>

    <main>
        <form class="product-form" action="/login" method="POST">

          <h2>Welcome, please fill the fields to enter in the app</h2>

          <input type="hidden" name="_csrf" value="<%=csrfToken%>">

            <div class="form-control">
                <label for="description">E-mail</label>
                <input type="email" name="email" id="email">
            </div>

                      
            <div class="form-control">
                <label for="title">Password</label>
                <input type="password" name="password">
            </div>
             
            <button class="btn" type="submit">Go</button>
       
        </form>


        <div style="text-align: center; padding: 4px;">
            <a style="text-decoration: none" href="./reset-pass" >Reset password</a></div>


    </main>
    
<%- include('./includes/end.ejs') %>